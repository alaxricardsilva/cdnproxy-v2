datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int              @id @default(autoincrement())
  email            String           @unique
  name             String?
  password         String
  role             String?
  twoFactorEnabled Boolean          @default(false)
  twoFactorSecret  String?
  payments         Payment[]
  pixTransactions  PixTransaction[]
  profiles         Profile[]
}

model Profile {
  id        Int     @id @default(autoincrement())
  userId    Int
  bio       String?
  avatarUrl String?
  user      User    @relation(fields: [userId], references: [id])
}

model Configuration {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model Domain {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  status String?
}

model GeneralConfig {
  id        Int    @id @default(autoincrement())
  configKey String @unique
  configVal String
}

model SuperadminProfile {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Plan {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
}

model Payment {
  id     Int    @id @default(autoincrement())
  amount Float
  status String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model PixTransaction {
  id     Int    @id @default(autoincrement())
  amount Float
  status String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model AccessLog {
  id                Int      @id @default(autoincrement())
  domain_id         Int?
  path              String?
  method            String?
  status_code       Int?
  client_ip         String?
  user_agent        String?
  device_type       String?
  country           String?
  city              String?
  isp               String?
  response_time     Int?
  bytes_transferred Int?
  cache_status      String?
  episode_info      Json?
  session_id        String?
  change_type       String?
  episode_changed   Boolean?
  content_id        String?
  accessed_at       DateTime @default(now())
}

model GeolocationCache {
  id         Int      @id @default(autoincrement())
  ip         String   @unique
  country    String?
  city       String?
  isp        String?
  deviceInfo Json?
  createdAt  DateTime @default(now())
}

model MonthlyTraffic {
  id        Int      @id @default(autoincrement())
  month     String
  trafficMB Float
  createdAt DateTime @default(now())
}

model DashboardData {
  id        Int      @id @default(autoincrement())
  metric    String?
  value     Float?
  createdAt DateTime @default(now())
}

model MercadopagoTransaction {
  id        Int      @id @default(autoincrement())
  userId    Int?
  amount    Float?
  status    String?
  createdAt DateTime @default(now())
}

model StreamingProxy {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  status    String?
  createdAt DateTime @default(now())
}

model NeonAuthUserSync {
  id         String    @id
  name       String?
  email      String    @unique
  created_at DateTime  @default(now())
  updated_at DateTime
  deleted_at DateTime?
  raw_json   Json?
}
